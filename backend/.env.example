# TRM Agent Backend - Environment Variables
# Copy this file to .env and fill in your values

# ==================== APP ====================
DEBUG=true
APP_NAME="TRM Agent"
APP_VERSION="1.0.0"

# ==================== DATABASE ====================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trm_agent

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379

# ==================== JWT AUTH ====================
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================== AI/ML ====================
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key-optional

# ==================== DATA SOURCES ====================
# FRED API (Federal Reserve Economic Data)
FRED_API_KEY=your-fred-api-key

# Alpha Vantage (for oil prices)
ALPHA_VANTAGE_KEY=your-alpha-vantage-key

# ==================== TRADING CONFIG ====================
# Minimum confidence to approve signals (0.90 = 90%)
MIN_CONFIDENCE=0.90
MIN_EXPECTED_RETURN=0.02
MAX_DAILY_LOSS=0.02
MAX_POSITION_SIZE=0.10
STOP_LOSS_PCT=0.01
TAKE_PROFIT_PCT=0.03

# ==================== BROKERS ====================
# Interactive Brokers
IBKR_HOST=127.0.0.1
IBKR_PORT=7497

# Alpaca (Paper Trading)
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_PAPER=true

# ==================== NOTIFICATIONS ====================
# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# ==================== SCHEDULER ====================
PREDICTION_CRON_HOUR=6
PREDICTION_CRON_MINUTE=0
